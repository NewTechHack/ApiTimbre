{
  "apps" : [
    {
      "name"      : "wayna-bell-api",
      "script"    : "server.js",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  ],
  "deploy" : {
    "rpi" : {
      "user" : "root",
      "host" : "192.168.1.34",
      "ref"  : "origin/master",
      "repo" : "git@github.com:NewTechHack/WaynaBell-API.git",
      "path" : "/app/wayna-bell-api",
      "post-deploy" : "npm install --production --force && sudo pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
